@page "/"

<MudPaper Outlined="false">
    <MudStack Justify="@_justify" AlignItems="@_align" Spacing="@_spacing">
        <MudPaper Class="py-5 px-3 d-inline-flex justify-space-between">
            

            <MudPaper Outlined="false" Width="30%">
               <MudText  Typo="Typo.h6">Shots on target</MudText>
             </MudPaper>

            <MudPaper Width="20%">
                <MudTextField @bind-Value="_testCount" Label="Disabled" Variant="Variant.Filled" Disabled="true" Style="font-size:35px"/>
             </MudPaper>

            <MudIconButton Icon="@Icons.Material.Filled.ArrowBack" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="async() =>await TestChange(-1)"/>
            <MudIconButton Icon="@Icons.Material.Filled.PlusOne" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" OnClick="async() => await TestChange(1)"/>
        </MudPaper>
    </MudStack>
</MudPaper>

@code {
    Justify _justify = Justify.SpaceBetween;
    AlignItems _align = AlignItems.Stretch;
    private int _spacing { get; set; } = 3;

    private int _testCount = 0;

    public async Task TestChange(int amount)
    {
        _testCount += amount;
    }
}

